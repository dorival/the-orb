{
  "name": "the-orb",
  "version": "0.1.0",
  "license": "MIT",
  "description": "The Orb distribute things to places in a random manner but keeping those places filled as even as possible.",
  "keywords": ["electron", "react", "typescript", "sort", "customize"],
  "bugs": "https://github.com/dorival/the-orb/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/dorival/the-orb.git" },
  "author": {
    "name": "Dorival Neto",
    "email": "dorival@live.ca",
    "url": "http://dorival.ca"
  },
  "main": "public/electron.js",
  "dependencies": {
    "@types/jest": "24.0.13",
    "@types/node": "12.0.2",
    "@types/react": "16.8.18",
    "@types/react-dom": "16.8.4",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "typescript": "3.4.5",
    "wait-on": "^3.2.0"
  },
  "devDependencies": {
    "electron": "^5.0.2",
    "electron-builder": "^20.41.0"
  },
  "scripts": {
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject"
  },
  "homepage": "./",
  "build": {
    "appId": "ca.dorival.theorb"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
